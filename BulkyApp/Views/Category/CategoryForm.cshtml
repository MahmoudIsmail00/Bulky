@model Category

<form method="post" asp-action="@(Model.Id > 0 ? "Edit" : "Create")">
    <div class="border-3 p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0">@(Model.Id > 0 ? "Edit" : "Create") Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="Id" hidden/>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    Save
                </button>
            </div>
            <div class="col-6 col-md-4">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
        
        
    </div>
</form>

@section Scripts{
    @{
        // We add this for client side validations
        // يعني مش هيروح للسيرفر غير لما يتأكد من الفالديشين بتاعة الكلاينت سايد
        <partial name="_ValidationScriptsPartial" />
    }
}